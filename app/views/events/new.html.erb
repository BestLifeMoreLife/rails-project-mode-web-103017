
<h1 class="text-center"> New Event Form </h1>
<%= form_for @event do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, class: "form-control" %>
  <br></br>
  <%= f.label :description %>
  <%= f.text_area :description, class: "form-control" %>
  <br></br>
  <%= f.label "Minimum Age" %>
  <%= f.number_field :age, class: "form-control" %>
  <br></br>
  <%= f.label "Max Capacity" %>
  <%= f.text_field :capacity, class: "form-control" %>
  <br></br>
  <%= f.label :price %>
  <%= f.text_field :price, :value => "$", class: "form-control"%>
  <br></br>
  <%= f.label :location %>
  <%= f.text_field :location, class: "form-control"%>
  <br></br>
  <%= f.label :category %>
  <%= f.collection_select :category_id, Category.all, :id, :name, class: "form-control"%>
  <br></br>
  <%= f.label :date %>
  <%= f.datetime_select :date, start_year: 2017, order:[:month, :day, :year] %>
  <br></br>


  <input type="hidden" name="event[user_id]" value="7">

  <%= f.submit "Submit", class: "btn btn-default" %>
<% end %>
