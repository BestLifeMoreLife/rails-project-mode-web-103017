<h1> <%= @user.to_s %> </h1>
<%= mail_to @user.email, "email", {subject: "Tesellate", body: "Hey there!"} %>

<p> Birthday: <%= @user.birthday.strftime(" %B %d") %></p>

<br>
<br>
<p> <strong> Favorite Categories:</strong> </p>
<ul>
  <% @user.fav_categories.each do |cat|%>
  <%if cat%>
  <li> <%= link_to cat.name, category_path(cat) %> </li>
  <%end%>
  <% end %>
</ul>
<br>
<hr>
<p><strong> Upcoming events: </strong> </p>
<ul>
  <% @user.upcomming.each do |e| %>
  <li><%= link_to e.name, event_path(e)%> | <%=e.category.name%> | <%=e.price%> | Date: <%= e.date.strftime(" %A, %B %d, %Y") %>, at <%= e.date.strftime(" %H:%M")%>  </li>
  <% end %>
</ul>
<br>
<hr>
<p> <strong> What's happening on your birthday? </strong> </p>
<ul>
  <% @user.birthday_events.each do |e|%>
  <li><%= link_to e.name, event_path(e)%> | <%=e.category.name%> | <%=e.price%> | Date: <%= e.date.strftime(" %A, %B %d, %Y") %>, at <%= e.date.strftime(" %H:%M")%>  </li>
  <% end %>
</ul>
<br></br>
<%= link_to "Delete profile", user_path(@user), :data => {:confirm => "Are you sure?", :method => "Delete"}%>
